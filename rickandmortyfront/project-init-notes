### Install Angular

# Uninstall Angular client
npm uninstall -g @angular/cli
# Install Angular 16 client
npm i -g @angular/cli@16.2.12
_________________

### App management

# Create a new app (--no-standalone to keep ngModule)
ng new my-app --no-standalone
# Create a module (ng generate module)
ng g m module-name
# Create a component (ng generate component)
ng g c component-name
# Create a service (ng generate service)
ng g s service-name

# Create a personalized directive  (ng generate directive)
ng g d directive-name

# Generate pipe (ng generate pipe)
ng g p pipe-name

# Create a run simulation
--dry-run

# Start project
npm start

_________________

# Install Bootstrap
npm i bootstrap@5.3.3

# Add to angular.json
    "styles": [
      "src/styles.css",
      "node_modules/bootstrap/dist/css/bootstrap.min.css"
    ],
    "scripts": [
      "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
    ]

_________________
# Cookie system
npm i ngx-cookie-service@16.1.0

_________________
# Toast
npm install ngx-toastr --save
npm install @angular/animations --save

npm i notyf


# Sass compilator
npm install node-sass sass-loader --save-dev

# Chart graphycs
npm install chart.js

# Dates
npm install moment
npm install date-fns

